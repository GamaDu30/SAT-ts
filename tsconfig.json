{
    "compileOnSave": true,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "jsx": "react",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "outDir": "./lib",
        "sourceMap": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
  }